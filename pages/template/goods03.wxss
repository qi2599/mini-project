.box{
  color: #54637d;
  height: 240rpx;
  padding: 10rpx 30rpx;
  margin: 10rpx;
  background-color: white;
  box-shadow: 0px 0px 30rpx #ebebeb;
  border-radius: 10rpx;
}
.box image{
  float: left;
  width: 240rpx;
  height: 240rpx;
}
.img{
  position: relative;
}
.img>view{
  position: absolute;
  top: 160rpx;
  width: 240rpx;
  color: white;
  text-align: center;
  background-color: #6d6d6d;
  opacity: 0.7;
  line-height: 2rem;
}

.name_wrap .att{
  color: white;
  background-color: #fa5151;
  float: left;
  font-size: 0.6rem;
  margin: 1.1rem 0 0 0.5rem;
  padding: 0 0.2rem;
  line-height: 0.8rem;
  border-radius: 0.1rem;
}
.name{
  display: block;
  padding-left: 0.5rem;
  font-size: 1rem;
  line-height: 3.5rem;
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.wrap{
  height: 90rpx;
  padding: 0 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.wrap .wap{
  color: #fa5151;
}
.sale{

  font-size: 0.7rem;
  line-height: 1.35rem;
  text-decoration-line: line-through;
}
.iconicon2{
  font-size: 2rem;
}
.iconicon2:active{
  color: #EA3351;
}