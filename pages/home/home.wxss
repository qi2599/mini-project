/* pages/home/home.wxss */
@import '/pages/template/goods02.wxss';
page{
  background-color: white;
}

/* 轮播图 */
swiper{
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}

/* 商品列表 */
.goods_box{
  padding: 0 1%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.goods_item{
  height: 100%;
}

/* 导航 */
.wrap{
  display: flex;
  flex-wrap: wrap;
  width: 96%;
  margin: 20rpx auto;
  background-color: white;
  box-shadow: 0px 0px 30rpx #ebebeb;
  border-radius: 10rpx;
}
.nav_item{
  width: 20%;
  text-align: center;
  padding: 0.5rem 0;
  font-size: 0.7rem;
  flex-grow: 1;
}
.nav_item image{
  width: 100rpx;
  height: 100rpx;
}

/* 搜索 */
.searchbox{
  height: 2rem;
}
#searchWrap{
  height: 2.5rem;
  background-color:white;
}
.setSearch{
  width: 100%;
  position: fixed;
  z-index: 1;
  top: 0;
  opacity: 0.9;
  box-shadow: 0 0 30rpx #ebebeb;
}
#searchWrap text{
  width: 96%;
  background-color: rgb(240, 240, 240);
  text-align: center;
  font-size: 1rem;
  line-height: 2rem;
  border-radius: 10rpx;
  margin: 0 auto;
}

/* 回到顶部 */
.goTop{
  position: fixed;
  bottom: 40rpx;
  right: 60rpx;
  width: 2rem;
  text-align: center;
  color: white;
  background-color: #686868;
  opacity: 0.7;
  border-radius: 3rem;
  font-size: 0.7rem;
  padding: 0.5rem;
}